---
import LanguageSwitcher from './LanguageSwitcher.astro';
import ThemeToggle from './ThemeToggle.tsx';
---

<header class="fixed top-0 w-full bg-gray-800/95 dark:bg-gray-800/95 bg-white/95 backdrop-blur-md border-b border-gray-700 dark:border-gray-700 border-gray-200 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="text-2xl font-bold text-white dark:text-white text-gray-900">JAN</div>
      <div class="flex items-center">
        <LanguageSwitcher />
        <div class="ml-6">
          <ThemeToggle client:load />
        </div>
      </div>
    </div>
  </div>
</header>