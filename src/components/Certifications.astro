---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { FaAws, FaDocker, FaReact, FaCertificate, FaExternalLinkAlt } from 'react-icons/fa';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const certificationIcons = {
  aws: FaAws,
  docker: FaDocker,
  react: FaReact,
};

const certificationColors = {
  aws: 'from-orange-400 to-orange-600',
  docker: 'from-blue-400 to-blue-600',
  react: 'from-cyan-400 to-blue-500',
};

const certifications = Object.entries(t('certifications.badges')).map(([key, cert]) => ({
  id: key,
  ...cert,
  icon: certificationIcons[key as keyof typeof certificationIcons] || FaCertificate,
  color: certificationColors[key as keyof typeof certificationColors] || 'from-gray-400 to-gray-600',
}));
---

<section id="certifications" class="py-16 bg-gray-50 dark:bg-gray-800">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 text-gray-900 dark:text-white">
      {t('certifications.title')}
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {certifications.map((cert) => {
        const Icon = cert.icon;
        return (
          <div class="group relative bg-white dark:bg-gray-900 rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden">
            <div class={`absolute inset-0 bg-gradient-to-br ${cert.color} opacity-0 group-hover:opacity-10 transition-opacity duration-300`}></div>
            
            <div class="relative p-6">
              <div class={`w-20 h-20 mx-auto mb-4 rounded-full bg-gradient-to-br ${cert.color} flex items-center justify-center shadow-lg transform group-hover:scale-110 transition-transform duration-300`}>
                <Icon className="w-10 h-10 text-white" />
              </div>
              
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white text-center mb-2">
                {cert.name}
              </h3>
              
              <div class="text-center space-y-2">
                <p class="text-sm text-gray-600 dark:text-gray-400">
                  <span class="font-medium">{t('certifications.issuer')}:</span> {cert.issuer}
                </p>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                  <span class="font-medium">{t('certifications.date')}:</span> {cert.date}
                </p>
              </div>
              
              <div class="mt-4 flex justify-center">
                <button 
                  class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-white bg-gradient-to-r from-indigo-500 to-purple-600 rounded-lg hover:from-indigo-600 hover:to-purple-700 transition-all duration-200 transform hover:scale-105"
                  aria-label={`${t('certifications.verify')} ${cert.name}`}
                >
                  <FaExternalLinkAlt className="w-3 h-3" />
                  {t('certifications.verify')}
                </button>
              </div>
            </div>
            
            <div class="absolute top-4 right-4 opacity-10">
              <FaCertificate className="w-16 h-16 text-gray-400" />
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  
  .group:hover .certification-badge {
    animation: float 3s ease-in-out infinite;
  }
</style>