---
import { SiNextdotjs, SiTypescript, SiPython, SiLaravel, SiNodedotjs, SiAstro, SiVuedotjs, SiTailwindcss, SiDocker, SiLinux, SiAmazonwebservices, SiGit } from 'react-icons/si';

const technologies = [
  { name: 'Next.js', Icon: SiNextdotjs },
  { name: 'TypeScript', Icon: SiTypescript },
  { name: 'Python', Icon: SiPython },
  { name: 'Laravel', Icon: SiLaravel },
  { name: 'Node.js', Icon: SiNodedotjs },
  { name: 'Astro', Icon: SiAstro },
  { name: 'Vue.js', Icon: SiVuedotjs },
  { name: 'Tailwind CSS', Icon: SiTailwindcss },
  { name: 'Docker', Icon: SiDocker },
  { name: 'Linux', Icon: SiLinux },
  { name: 'AWS', Icon: SiAmazonwebservices },
  { name: 'Git', Icon: SiGit }
];
---

<section id="skills" class="py-12 sm:py-16 px-4">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-8 sm:mb-10 text-gray-900 dark:text-white tracking-tight text-center">
      Tech Stack
    </h2>
    <div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-6 lg:grid-cols-12 gap-4 sm:gap-6 lg:gap-4">
      {technologies.map((tech) => (
        <div class="group relative flex flex-col items-center">
          <div class="p-2 sm:p-3 md:p-4 rounded-lg transition-all duration-300 hover:scale-110 hover:bg-gray-100 dark:hover:bg-gray-800">
            <tech.Icon className="text-2xl sm:text-3xl md:text-4xl text-gray-600 dark:text-gray-400 transition-colors duration-300 group-hover:text-gray-900 dark:group-hover:text-gray-100" />
          </div>
          <span class="absolute -bottom-6 sm:-bottom-8 opacity-0 md:opacity-0 font-medium text-xs sm:text-sm text-gray-700 dark:text-gray-300 transition-opacity duration-300 group-hover:opacity-100 whitespace-nowrap">
            {tech.name}
          </span>
        </div>
      ))}
    </div>
  </div>
</section>
