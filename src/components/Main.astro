---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { FaLinkedin, FaGithub } from 'react-icons/fa';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<main id="home" class="relative min-h-screen flex items-center">
  <div class="container mx-auto px-4 py-16 md:py-24">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div class="flex justify-center lg:justify-start">
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-full blur-3xl opacity-20"></div>
          <img
            src="/images/profile.jpg"
            alt="Jose Antonio Nuevo"
            class="relative w-72 h-72 md:w-96 md:h-96 object-cover rounded-full shadow-2xl border-4 border-white dark:border-gray-800"
            loading="eager"
          />
        </div>
      </div>

      <div>
        <div class="space-y-6">
          <div>
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white">
              Jose Antonio Nuevo
            </h1>
            <p class="text-xl md:text-2xl text-indigo-600 dark:text-indigo-400 font-semibold mt-4">
              Tech Lead & Full Stack Developer Freelancer
            </p>
          </div>

          <p class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed">
            {t('hero.description')}
          </p>

          <div class="flex flex-wrap gap-4 pt-4">
            <a
              href="#contact"
              class="inline-flex items-center px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition-colors duration-200 shadow-lg hover:shadow-xl"
            >
              {t('hero.contactMe')}
            </a>
            <a
              href={lang === 'es' ? '/cv-es.pdf' : '/cv.pdf'}
              download
              class="inline-flex items-center px-6 py-3 border-2 border-indigo-600 text-indigo-600 hover:bg-indigo-50 dark:hover:bg-indigo-900/20 font-medium rounded-lg transition-colors duration-200"
            >
              {t('hero.downloadCV')}
            </a>
          </div>

          <div class="flex gap-4 pt-6">
            <a
              href="https://www.linkedin.com/in/jose-antonio-nuevo"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center w-12 h-12 bg-gray-700 dark:bg-gray-800 hover:bg-indigo-600 text-white rounded-full transition-all duration-200 transform hover:scale-110"
              aria-label="LinkedIn Profile"
            >
              <FaLinkedin className="w-6 h-6" />
            </a>
            <a
              href="https://github.com/JoseAntonioNuevo"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center w-12 h-12 bg-gray-700 dark:bg-gray-800 hover:bg-indigo-600 text-white rounded-full transition-all duration-200 transform hover:scale-110"
              aria-label="GitHub Profile"
            >
              <FaGithub className="w-6 h-6" />
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
