---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { FaLinkedin, FaGithub } from 'react-icons/fa';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<main id="home" class="relative min-h-screen flex items-center">
  <div class="container mx-auto px-4 py-20 sm:py-24 md:py-32">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 md:gap-12 items-center">
      <div class="flex justify-center lg:justify-start order-2 lg:order-1">
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-full blur-2xl sm:blur-3xl opacity-20"></div>
          <img
            src="/me.jpeg"
            alt="Jose Antonio Nuevo"
            class="relative w-48 h-48 sm:w-64 sm:h-64 md:w-80 md:h-80 lg:w-96 lg:h-96 object-cover rounded-full shadow-2xl border-4 border-white dark:border-gray-800"
            loading="eager"
          />
        </div>
      </div>

      <div class="order-1 lg:order-2 text-center lg:text-left">
        <div class="space-y-4 sm:space-y-6">
          <div>
            <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white">
              Jose Antonio Nuevo
            </h1>
            <p class="text-lg sm:text-xl md:text-2xl text-indigo-600 dark:text-indigo-400 font-semibold mt-2 sm:mt-4">
              Tech Lead & Full Stack Developer Freelancer
            </p>
          </div>

          <p class="text-base sm:text-lg text-gray-700 dark:text-gray-300 leading-relaxed max-w-xl mx-auto lg:mx-0">
            {t('hero.description')}
          </p>

          <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 pt-4 justify-center lg:justify-start">
            <a
              href="#contact"
              class="inline-flex items-center justify-center px-5 sm:px-6 py-2.5 sm:py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition-colors duration-200 shadow-lg hover:shadow-xl text-sm sm:text-base"
            >
              {t('hero.contactMe')}
            </a>
            <a
              href={lang === 'es' ? '/cv-es.pdf' : '/cv.pdf'}
              download
              class="inline-flex items-center justify-center px-5 sm:px-6 py-2.5 sm:py-3 border-2 border-indigo-600 text-indigo-600 hover:bg-indigo-50 dark:hover:bg-indigo-900/20 font-medium rounded-lg transition-colors duration-200 text-sm sm:text-base"
            >
              {t('hero.downloadCV')}
            </a>
          </div>

          <div class="flex gap-4 pt-4 sm:pt-6 justify-center lg:justify-start">
            <a
              href="https://www.linkedin.com/in/jose-antonio-nuevo"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center w-10 h-10 sm:w-12 sm:h-12 bg-gray-700 dark:bg-gray-800 hover:bg-indigo-600 text-white rounded-full transition-all duration-200 transform hover:scale-110"
              aria-label="LinkedIn Profile"
            >
              <FaLinkedin className="w-5 h-5 sm:w-6 sm:h-6" />
            </a>
            <a
              href="https://github.com/JoseAntonioNuevo"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center w-10 h-10 sm:w-12 sm:h-12 bg-gray-700 dark:bg-gray-800 hover:bg-indigo-600 text-white rounded-full transition-all duration-200 transform hover:scale-110"
              aria-label="GitHub Profile"
            >
              <FaGithub className="w-5 h-5 sm:w-6 sm:h-6" />
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
