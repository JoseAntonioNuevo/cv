---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { FaLinkedin, FaGithub } from 'react-icons/fa';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="hero" class="relative min-h-screen flex items-center overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-br from-indigo-50 via-white to-purple-50 dark:from-gray-900 dark:via-gray-800 dark:to-indigo-950"></div>
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top_right,_var(--tw-gradient-stops))] from-indigo-100/20 via-transparent to-transparent dark:from-indigo-900/20"></div>
  <div class="container mx-auto px-4 py-20 sm:py-24 md:py-32 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 md:gap-12 items-center">
      <div class="flex justify-center order-2 lg:order-1">
        <div class="relative group">
          <div class="absolute -inset-1 bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 rounded-full blur-2xl opacity-30 group-hover:opacity-40 transition duration-1000 group-hover:duration-200 animate-pulse"></div>
          <div class="absolute -inset-1 bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 rounded-full opacity-20 group-hover:opacity-30 transition duration-1000 animate-spin-slow"></div>
          <img
            src="/me.jpeg"
            alt="Jose Antonio Nuevo"
            class="relative w-48 h-48 sm:w-64 sm:h-64 md:w-80 md:h-80 lg:w-96 lg:h-96 object-cover rounded-full shadow-2xl border-4 border-white/80 dark:border-gray-800/80 backdrop-blur-sm transform transition duration-500 group-hover:scale-105"
            loading="eager"
          />
        </div>
      </div>

      <div class="order-1 lg:order-2 text-center lg:text-left">
        <div class="space-y-4 sm:space-y-6">
          <div>
            <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white animate-fade-in-up">
              Jose Antonio Nuevo
            </h1>
            <p class="text-lg sm:text-xl md:text-2xl bg-gradient-to-r from-indigo-600 to-purple-600 dark:from-indigo-400 dark:to-purple-400 bg-clip-text text-transparent font-semibold mt-2 sm:mt-4 animate-fade-in-up animation-delay-200">
              Tech Lead & Full Stack Developer Freelancer
            </p>
          </div>

          <div class="text-base sm:text-lg text-gray-700 dark:text-gray-300 leading-relaxed max-w-xl mx-auto lg:mx-0 animate-fade-in-up animation-delay-400" set:html={t('hero.description')}>
          </div>

          <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 pt-4 justify-center lg:justify-start animate-fade-in-up animation-delay-600">
            <a
              href="#contact"
              class="inline-flex items-center justify-center px-5 sm:px-6 py-2.5 sm:py-3 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-medium rounded-lg transition-all duration-300 shadow-lg hover:shadow-xl hover:shadow-indigo-500/25 transform hover:-translate-y-0.5 text-sm sm:text-base group"
            >
              <span class="mr-2">{t('hero.contactMe')}</span>
              <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
            <a
              href={lang === 'es' ? '/cv-es.pdf' : '/cv.pdf'}
              download
              class="inline-flex items-center justify-center px-5 sm:px-6 py-2.5 sm:py-3 border-2 border-transparent bg-white/10 dark:bg-gray-800/50 backdrop-blur-sm text-indigo-600 dark:text-indigo-400 hover:bg-indigo-50 dark:hover:bg-indigo-900/30 hover:border-indigo-600 dark:hover:border-indigo-400 font-medium rounded-lg transition-all duration-300 text-sm sm:text-base group"
            >
              <svg class="w-4 h-4 mr-2 transition-transform group-hover:-translate-y-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              {t('hero.downloadCV')}
            </a>
          </div>

          <div class="flex gap-4 pt-4 sm:pt-6 justify-center lg:justify-start animate-fade-in-up animation-delay-800">
            <a
              href="https://www.linkedin.com/in/jose-antonio-nuevo"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center w-10 h-10 sm:w-12 sm:h-12 bg-gradient-to-br from-gray-700 to-gray-800 dark:from-gray-800 dark:to-gray-900 hover:from-indigo-600 hover:to-indigo-700 text-white rounded-full transition-all duration-300 transform hover:scale-110 hover:-translate-y-1 shadow-lg hover:shadow-xl hover:shadow-indigo-500/25"
              aria-label="LinkedIn Profile"
            >
              <FaLinkedin className="w-5 h-5 sm:w-6 sm:h-6" />
            </a>
            <a
              href="https://github.com/JoseAntonioNuevo"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center w-10 h-10 sm:w-12 sm:h-12 bg-gradient-to-br from-gray-700 to-gray-800 dark:from-gray-800 dark:to-gray-900 hover:from-indigo-600 hover:to-indigo-700 text-white rounded-full transition-all duration-300 transform hover:scale-110 hover:-translate-y-1 shadow-lg hover:shadow-xl hover:shadow-indigo-500/25"
              aria-label="GitHub Profile"
            >
              <FaGithub className="w-5 h-5 sm:w-6 sm:h-6" />
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes spin-slow {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out forwards;
  }

  .animate-spin-slow {
    animation: spin-slow 20s linear infinite;
  }

  .animation-delay-200 {
    animation-delay: 200ms;
  }

  .animation-delay-400 {
    animation-delay: 400ms;
  }

  .animation-delay-600 {
    animation-delay: 600ms;
  }

  .animation-delay-800 {
    animation-delay: 800ms;
  }
</style>
